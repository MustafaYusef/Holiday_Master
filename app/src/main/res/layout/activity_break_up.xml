<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".tickets.breakUp.breakUp" android:background="#F3F0F0">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
            android:weightSum="3"
            android:gravity="center"

    >
        <!--<ImageButton-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="39dp" app:srcCompat="@drawable/left_arrow23"-->
        <!--android:id="@+id/imageButton3" android:layout_weight="1" android:background="@drawable/backsearch"-->
        <!--android:onClick="backToOne" android:scaleType="fitCenter" android:layout_gravity="center"/>-->
        <TextView
                android:text="Fare Breakup"
                android:layout_width="221dp"
                android:layout_height="52dp"
                android:layout_gravity="top" android:textSize="24sp" android:textStyle="bold"
                android:paddingTop="10dp" android:textColor="#fff" android:layout_weight="1"
                android:gravity="center"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
            android:layoutDirection="ltr"
                  android:orientation="horizontal" android:weightSum="4" android:elevation="5dp"
                  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:padding="5dp">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center" android:textColor="#fff"
                  android:background="@drawable/fare_back1"
                  android:layout_weight="3" android:text="Adult" android:textSize="16sp"
                  android:paddingBottom="15dp" android:paddingTop="15dp"/>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center|left"
                  android:text="Airline"
                  android:textSize="18sp" android:padding="15dp"
                  android:background="@drawable/fare_back2"
                  android:layout_weight="1" android:id="@+id/AdultTax"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
            android:layoutDirection="ltr"
                  android:orientation="horizontal" android:weightSum="4" android:elevation="5dp"
                  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:padding="5dp">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center" android:textColor="#fff"
                  android:background="@drawable/fare_back1"
                  android:layout_weight="3" android:text="Base Fare" android:textSize="16sp"
                  android:paddingBottom="15dp" android:paddingTop="15dp"/>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center|left"
                  android:text="Airline"
                  android:textSize="18sp" android:padding="15dp"
                  android:background="@drawable/fare_back2"
                  android:layout_weight="1" android:id="@+id/baseFare"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
            android:layoutDirection="ltr"
                  android:orientation="horizontal" android:weightSum="4" android:elevation="5dp"
                  android:id="@+id/AirLinBtn"
                  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:padding="5dp">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center" android:textColor="#fff"
                  android:background="@drawable/fare_back1"
                  android:layout_weight="3" android:text="Taxes and Fees" android:textSize="16sp"
                  android:paddingBottom="15dp" android:paddingTop="15dp"/>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center|left"
                  android:text="Airline"
                  android:textSize="18sp" android:padding="15dp"
                  android:background="@drawable/fare_back2"
                  android:layout_weight="1" android:id="@+id/TaxFare"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
                  android:layout_marginTop="15dp"
                  android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:textColor="#000"
                android:text="Total Price"


                android:textAlignment="center" android:textSize="18sp"
                android:padding="7dp" android:textStyle="bold"/>
        <Button
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:background="@drawable/btnb"
                android:textColor="#ffffff"
                android:text="555 $"


                android:textAlignment="center" android:textSize="20sp"
                android:id="@+id/PriceBreak" android:paddingTop="7dp" android:paddingBottom="7dp"
                android:paddingRight="15dp" android:paddingLeft="15dp"/>

    </LinearLayout>

</LinearLayout>