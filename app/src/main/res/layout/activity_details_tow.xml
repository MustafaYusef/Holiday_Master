<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailsTow" android:background="#fff">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="418dp"
            android:layout_height="78dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
            android:weightSum="3"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="4dp">
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="53dp" app:srcCompat="?attr/actionModeCloseDrawable"
                android:id="@+id/imageButton3" android:layout_weight="1" android:background="#6F499C"
        />
        <TextView
                android:text="Ticket info"
                android:layout_width="221dp"
                android:layout_height="52dp" android:id="@+id/toShow2"
                android:layout_gravity="top" android:textSize="24sp" android:textStyle="bold"
                android:paddingTop="10dp" android:textColor="#fff" android:layout_weight="1" android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="652dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:gravity="center">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="569dp" android:id="@+id/detailsTowList"/>
        <Button
                android:text="Purchase"
                android:layout_width="248dp"
                android:layout_height="66dp" android:id="@+id/purTow" android:textSize="18sp" android:textStyle="bold"
                android:background="@drawable/btnun"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>