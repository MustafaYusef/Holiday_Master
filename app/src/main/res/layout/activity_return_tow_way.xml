<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".tickets.towWay.ReturnTowWay">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginTop="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <!--<ImageButton-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="39dp" app:srcCompat="@drawable/left_arrow23"-->
        <!--android:id="@+id/imageButton3" android:layout_weight="1" android:background="@drawable/backsearch"-->
        <!--android:onClick="backToOne" android:scaleType="fitCenter" android:layout_gravity="center"/>-->
        <TextView
                android:text="Return Flight"
                android:layout_width="221dp"
                android:layout_height="52dp" android:id="@+id/toShow2"
                android:layout_gravity="top" android:textSize="24sp" android:textStyle="bold"
                android:paddingTop="10dp" android:textColor="#fff" android:layout_weight="1"
                android:gravity="center"/>
    </LinearLayout>




    <LinearLayout

            android:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/cardback"
            android:padding="10dp"

            android:id="@+id/OneContainer"
            android:gravity="center" android:layout_margin="5dp">

        <LinearLayout
                android:id="@+id/dd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:gravity="center" android:layout_weight="1">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:orientation="vertical" android:layout_marginRight="3dp">
                <ImageView
                        android:layout_width="75dp"

                        android:layout_height="56dp" android:id="@+id/LogoAir" android:layout_margin="3dp"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="33dp"
                          android:text="company name" android:textAlignment="center" android:id="@+id/companyNameOne"
                          android:layout_margin="3dp" android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:weightSum="2">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:weightSum="5"
                        android:gravity="left" android:paddingLeft="3dp" android:paddingTop="3dp"
                        android:paddingBottom="3dp" android:paddingRight="5dp">
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/arrTime"
                            android:layout_weight="1" android:gravity="left"
                            android:textSize="14sp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/AirNameDep"
                            android:layout_weight="1" android:textColor="@color/colorPrimary"
                            android:gravity="center" android:textSize="14sp"
                            android:textStyle="bold" android:layout_marginTop="3dp"/>
                    <TextView
                            android:layout_width="106dp"
                            android:layout_height="20dp" android:id="@+id/textView8"
                            android:layout_weight="1" android:gravity="center"
                            android:background="@drawable/plainxd" android:layout_marginTop="3dp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/depTime"
                            android:layout_weight="1" android:gravity="left"
                            android:textSize="14sp" android:layout_marginTop="3dp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/airNameArr"
                            android:layout_weight="1" android:textColor="@color/colorPrimary"
                            android:textSize="14sp" android:layout_marginTop="3dp"
                            android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#6B4AA3" android:layout_margin="3dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp">
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="2dp" android:id="@+id/duration"
                            android:layout_weight="1" android:gravity="center|left"
                            android:paddingLeft="4dp" android:textSize="16sp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="3dp" android:id="@+id/stops"
                            android:layout_weight="1" android:gravity="center|left"
                            android:paddingLeft="4dp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/priceOne"
                            android:layout_weight="0.5" android:gravity="center|left"
                            android:paddingLeft="4dp"
                            android:textColor="#6F499C" android:textSize="18sp"
                            android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6B4AA3" android:layout_margin="5dp" android:id="@+id/line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_gravity="center" android:id="@+id/bottonsCon" android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" android:paddingLeft="10dp" android:paddingRight="10dp"
                android:gravity="center">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btnrud"
                    android:textColor="#ffffff"
                    android:text="Details"
                    android:layout_weight="1"


                    android:id="@+id/Details" android:textSize="14sp" android:paddingLeft="5dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_blue"
                    android:textColor="#ffffff"
                    android:id="@+id/purch"
                    android:text="Purchase"
                    android:layout_weight="1"


                    android:textAlignment="center" android:layout_marginLeft="5dp" android:textSize="14sp"
                    android:paddingLeft="2dp" android:paddingRight="2dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>