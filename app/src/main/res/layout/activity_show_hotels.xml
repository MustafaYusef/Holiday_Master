<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Hotels.ShowHotels">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backsearch"
                >

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="Hotels"
                        android:gravity="center"
                        android:textSize="20dp"

                        android:textColor="#fff"

                        android:id="@+id/textView14" android:fontFamily="sans-serif" android:paddingTop="16dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="Hotels"
                      android:paddingLeft="18dp"
                        android:textColor="#fff"

                        android:paddingTop="5dp" android:gravity="bottom"
                        android:id="@+id/CityDateHot"/>

        </LinearLayout>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="#fff">

            <TextView
                    android:id="@+id/noResultHot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Hotels_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    >
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>




    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_viewHotel"
            android:layout_width="173dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/animation2"
            app:lottie_loop="true"
            android:visibility="visible"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            />
</FrameLayout>