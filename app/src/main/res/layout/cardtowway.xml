<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f2f4f3"
        android:paddingTop="5dp"
        android:paddingRight="5dp"

>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="323dp"
            android:orientation="vertical"
            android:background="@drawable/cardback"
            android:padding="15dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="9dp" android:layout_alignParentStart="true"
            android:layout_marginStart="5dp" android:layout_marginTop="0dp" android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp" android:paddingTop="0dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="187dp" android:layout_marginTop="0dp" android:background="@drawable/btnb"
                android:gravity="center" android:layout_gravity="center" android:layout_weight="6">
            <TextView
                    android:text="Departure"
                    android:layout_width="327dp"
                    android:layout_height="37dp" android:id="@+id/textView3" android:layout_weight="1"
                    android:textColor="#fff" android:textSize="24sp" android:textStyle="bold"
                    android:paddingLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:orientation="vertical" android:layout_weight="6" android:gravity="center">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="75dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="55dp"
                        android:layout_height="66dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="53dp"
                            android:layout_height="54dp" android:gravity="left"
                            android:layout_gravity="left">
                        <ImageView
                                android:layout_width="52dp"
                                android:layout_height="51dp" android:id="@+id/LogoAirDep"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="317dp"
                        android:layout_height="match_parent" android:weightSum="5">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="94dp"
                            android:layout_height="66dp" android:weightSum="2">
                        <TextView
                                android:text="TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/depTimeDep"
                                android:layout_weight="1" android:textColor="#000" android:gravity="bottom|center"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/AirNameDepDep"
                                android:layout_weight="0.5" android:textColor="@android:color/darker_gray"
                                android:gravity="center" android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="105dp"
                            android:layout_height="80dp" android:weightSum="2">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:layout_weight="1.5"
                                    android:weightSum="3">
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" android:layout_weight="1">
                                    <TextView
                                            android:text="TextView"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:id="@+id/durationDep"
                                            android:layout_weight="0.5" android:textColor="?attr/colorButtonNormal"
                                            android:gravity="bottom|center" android:textSize="12sp"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="80dp" android:layout_weight="1">
                                    <TextView
                                            android:layout_width="37dp"
                                            android:layout_height="3dp" android:id="@+id/textView19ret"
                                            android:layout_weight="1"
                                            android:background="@color/cardview_shadow_start_color"
                                            android:layout_gravity="center"/>
                                    <TextView
                                            android:layout_width="10dp"
                                            android:layout_height="8dp" android:id="@+id/textView17ret"
                                            android:layout_weight="1" android:background="@drawable/y"
                                            android:gravity="center" android:layout_gravity="center"/>
                                    <TextView
                                            android:layout_width="24dp"
                                            android:layout_height="3dp" android:id="@+id/textView4ret"
                                            android:background="@color/cardview_shadow_start_color"
                                            android:layout_gravity="center"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:id="@+id/textView21e"
                                            android:layout_weight="1" android:layout_gravity="center|right"
                                            android:background="@drawable/ic_black_plane"
                                            android:layout_marginLeft="3dp"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" android:layout_weight="1">
                                    <TextView
                                            android:text="TextView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" android:id="@+id/stopsDep"
                                            android:layout_weight="0.3" android:textColor="?attr/colorButtonNormal"
                                            android:textSize="12sp" android:gravity="center"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="66dp" android:weightSum="2">
                        <TextView
                                android:text="TextView"
                                android:layout_width="match_parent"
                                android:layout_height="36dp" android:id="@+id/arrTimeDep"
                                android:layout_weight="1" android:textColor="#000" android:gravity="bottom|center"/>
                        <TextView
                                android:text="TextView"
                                android:layout_width="match_parent"
                                android:layout_height="35dp" android:id="@+id/AirNameArrDep"
                                android:layout_weight="0.5" android:textColor="@android:color/darker_gray"
                                android:gravity="center" android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="187dp" android:layout_marginTop="0dp" android:background="@drawable/btnb"
                android:gravity="center" android:layout_gravity="center" android:layout_weight="6">
            <TextView
                    android:text="Return"
                    android:layout_width="327dp"
                    android:layout_height="37dp" android:id="@+id/textView" android:layout_weight="1"
                    android:textColor="#fff" android:textSize="24sp" android:textStyle="bold"
                    android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/returnLayout"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:gravity="center">

            <LinearLayout
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical" android:layout_weight="6" android:gravity="bottom|center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="75dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="55dp"
                            android:layout_height="70dp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="53dp"
                                android:layout_height="68dp" android:gravity="left"
                                android:layout_gravity="left">
                            <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="51dp" android:id="@+id/LogoAirRet"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="317dp"
                            android:layout_height="75dp" android:weightSum="5">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="94dp"
                                android:layout_height="74dp" android:weightSum="2">
                            <TextView
                                    android:text="TextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/depTimeRet"
                                    android:layout_weight="1" android:textColor="#000" android:gravity="bottom|center"/>
                            <TextView
                                    android:text="TextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/AirNameDepRet"
                                    android:layout_weight="0.5" android:textColor="@android:color/darker_gray"
                                    android:gravity="center" android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="105dp"
                                android:layout_height="75dp" android:weightSum="2">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" android:layout_weight="1.5"
                                        android:weightSum="3">
                                    <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_weight="1">
                                        <TextView
                                                android:text="TextView"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content" android:id="@+id/durationRet"
                                                android:layout_weight="1" android:textColor="?attr/colorButtonNormal"
                                                android:gravity="bottom|center" android:textSize="12sp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_weight="1">
                                        <TextView
                                                android:layout_width="37dp"
                                                android:layout_height="3dp" android:id="@+id/textView19"
                                                android:layout_weight="1"
                                                android:background="@color/cardview_shadow_start_color"
                                                android:layout_gravity="center"/>
                                        <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="8dp" android:id="@+id/textView17"
                                                android:layout_weight="1" android:background="@drawable/y"
                                                android:gravity="center" android:layout_gravity="center"/>
                                        <TextView
                                                android:layout_width="24dp"
                                                android:layout_height="3dp" android:id="@+id/textView4"
                                                android:background="@color/cardview_shadow_start_color"
                                                android:layout_gravity="center"/>
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content" android:id="@+id/textView21"
                                                android:layout_weight="1" android:layout_gravity="center|right"
                                                android:background="@drawable/ic_black_plane"
                                                android:layout_marginLeft="3dp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_weight="1">
                                        <TextView
                                                android:text="TextView"
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp" android:id="@+id/stopsRet"
                                                android:layout_weight="0.5" android:textColor="?attr/colorButtonNormal"
                                                android:textSize="12sp" android:gravity="center"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="75dp" android:weightSum="2">
                            <TextView
                                    android:text="TextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/arrTimeRet"
                                    android:layout_weight="1" android:textColor="#000" android:gravity="bottom|center"/>
                            <TextView
                                    android:text="TextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/AirNameArrRet"
                                    android:layout_weight="0.5" android:textColor="@android:color/darker_gray"
                                    android:gravity="center" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="325dp"
                android:layout_height="5dp" android:layout_marginTop="5dp" android:background="@drawable/btnb"
                android:gravity="center" android:layout_gravity="center">
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="5dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="#6F499C"
                    android:text="$680"
                    android:id="@+id/priceTow" android:textStyle="bold"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btnun"
                    android:textColor="#ffffff"
                    android:text="Details"
                    android:layout_weight="1"


                    android:id="@+id/button4"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btnb"
                    android:textColor="#ffffff"
                    android:text="Select"
                    android:layout_weight="1"


                    android:textAlignment="center" android:layout_marginLeft="5dp" android:gravity="bottom|top"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>