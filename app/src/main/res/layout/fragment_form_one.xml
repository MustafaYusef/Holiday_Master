<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:id="@+id/frag_one">
    <LinearLayout android:layout_width="match_parent" android:layout_height="478dp"
                  android:orientation="vertical" android:padding="10dp" android:background="#fff"
                  android:layout_marginTop="10dp" android:id="@+id/frag1">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginBottom="-15dp" android:translationZ="1dp">
            <TextView
                    android:text="Personal info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView17"
                    android:textColor="@color/colorPrimary" android:textSize="20sp"
                    android:layout_marginLeft="30dp" android:background="#fff"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="441dp"
                      android:orientation="vertical" android:background="@drawable/back_form_visa"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="5dp" android:paddingTop="20dp" android:paddingLeft="20dp"
                      android:paddingRight="15dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="First Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView18"
                        android:textColor="#000"
                        android:textSize="20sp" android:layout_marginLeft="10dp" android:gravity="center_vertical"
                        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>


                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:hint="First Name" android:background="@drawable/edittext"
                        android:paddingTop="5dp" android:paddingBottom="5dp"
                        android:paddingLeft="5dp" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:id="@+id/firstName"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Last Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView19"
                        android:textColor="#000"
                        android:textSize="20sp" android:layout_marginLeft="10dp" android:gravity="center_vertical"
                        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:hint="Last Name" android:background="@drawable/edittext"
                        android:paddingTop="5dp" android:paddingBottom="5dp"
                        android:paddingLeft="5dp" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:id="@+id/lastName"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Nationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView20"
                        android:textColor="#000"
                        android:textSize="20sp" android:layout_marginLeft="10dp" android:gravity="center_vertical"
                        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:hint="Nationality" android:background="@drawable/edittext"
                        android:paddingTop="5dp" android:paddingBottom="5dp"
                        android:paddingLeft="5dp" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" android:id="@+id/nationality"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="150dp"
                    android:layout_height="35dp" android:background="@drawable/btnb"
                    android:layout_margin="10dp" android:onClick="DateOfBirth">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:src="@drawable/ic_calendar" android:layout_marginLeft="10dp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkin"
                        android:layout_weight="1"

                        android:textColor="#fff"
                        android:selectAllOnFocus="false"
                        android:text="Date of Birth" android:textStyle="normal"
                        android:textColorLink="#6F499C" android:background="@drawable/btnb"
                        android:textSize="12sp"/>


            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="85dp">
                <TextView
                        android:text="Photo Scan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView21"
                        android:textColor="#000"
                        android:textSize="20sp" android:layout_marginLeft="10dp" android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"/>
                <Button
                        android:text="Select File"
                        android:layout_width="156dp"
                        android:layout_height="35dp" android:id="@+id/button3"
                        android:background="@drawable/btnb" android:textColor="#fff"
                        android:textAlignment="textStart" android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp" android:onClick="UploadPhoto"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>