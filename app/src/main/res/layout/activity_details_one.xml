<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailsOne" android:background="#fff">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="418dp"
            android:layout_height="78dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
            android:weightSum="3"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="4dp">
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="53dp" app:srcCompat="?attr/actionModeCloseDrawable"
                android:id="@+id/imageButton3" android:layout_weight="1" android:background="#6F499C"
                android:onClick="backToOne"/>
        <TextView
                android:text="Ticket info"
                android:layout_width="221dp"
                android:layout_height="52dp" android:id="@+id/toShow2"
                android:layout_gravity="top" android:textSize="24sp" android:textStyle="bold"
                android:paddingTop="10dp" android:textColor="#fff" android:layout_weight="1" android:gravity="center"/>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="0dp"
            android:layout_height="756dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="200dp"
            android:id="@+id/swipeRefreshLayout">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Holiday_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="#d3d3d3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>