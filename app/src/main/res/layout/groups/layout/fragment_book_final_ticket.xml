<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tickets.BookOneWay.BookFinalTicket">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frag_oneT">

        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="77dp"

                android:layout_margin="0dp"
                android:background="@drawable/backsearch"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"

                >

            <TextView
                    android:layout_width="221dp"
                    android:layout_height="52dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Book Form"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bookTicketCon"
                android:layout_margin="5dp">

          <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

           <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:textSize="19sp"
                  android:textStyle="bold"
                   android:id="@+id/passNum"
                   android:textColor="#000"
                   android:text="Passenger Details"/>




                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/back_form_visa"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="15dp">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                      android:id="@+id/typePass"
                            android:layout_margin="5dp"
                            android:textSize="19sp"
                            android:textColor="#000"
                            android:text="Passenger Details"/>

                    <TextView

                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/btnb"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:id="@+id/selectTitle"

                            android:text="Select Title"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical"
                                android:text="First Name"
                                android:textColor="#000"
                                android:textSize="20sp" />


                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/firstNameT"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edittext"
                                android:gravity="center"
                                android:hint="First Name"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp" />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical"
                                android:text="Last Name"
                                android:textColor="#000"
                                android:textSize="20sp" />

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/lastNameT"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edittext"
                                android:hint="Last Name"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical"
                                android:text="Nationality"
                                android:textColor="#000"
                                android:textSize="20sp" />

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/nationalityT"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edittext"
                                android:hint="Nationality"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp" />
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical"
                                android:text="Passport No"
                                android:textColor="#000"
                                android:textSize="20sp" />


                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passPortNumT"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edittext"
                                android:hint="Passport No"
                                android:paddingLeft="5dp"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:inputType="number"
                                android:paddingBottom="5dp" />

                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">




                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btnb"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"

                                android:gravity="center"
                                android:src="@drawable/ic_calendar" />

                        <TextView

                                android:layout_width="match_parent"
                                android:id="@+id/DateBirthT"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:padding="5dp"

                                android:background="@drawable/btnb"
                                android:text="Date of Birth"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                />


                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btnb"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"

                                android:gravity="center"
                                android:src="@drawable/ic_calendar" />

                        <TextView

                                android:layout_width="match_parent"
                                android:id="@+id/passIssueDateV"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="5dp"
                                android:background="@drawable/btnb"
                                android:text="Passport Issue Date"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                />


                    </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/btnb"
                                android:orientation="horizontal">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"

                                    android:gravity="center"
                                    android:src="@drawable/ic_calendar" />

                            <TextView

                                    android:layout_width="match_parent"
                                    android:id="@+id/passExpireT"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:background="@drawable/btnb"
                                    android:text="Passport Expiry Date"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    />


                        </LinearLayout>





                            <TextView

                                    android:layout_width="match_parent"

                                    android:layout_weight="1"
                                    android:background="@drawable/btnb"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="50dp"
                                    android:id="@+id/travilWithbtn"
                                    android:text="Travelling with"
                                    android:textColor="#fff"
                                    android:textSize="16sp" />









                </LinearLayout>



            </LinearLayout>
              <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:gravity="center"
                      android:layout_margin="5dp"
                      android:orientation="horizontal">


                  <Button
                          android:id="@+id/NextTicketFinal"
                          android:layout_width="175dp"
                          android:layout_height="45dp"
                          android:background="@drawable/btnrud"
                          android:text="Next"
                          android:textColor="#fff"
                          android:textSize="18sp" />
              </LinearLayout>
          </LinearLayout>
        </ScrollView>
    </LinearLayout>
  <include layout="@layout/progress"/>
</FrameLayout>