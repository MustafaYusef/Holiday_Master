<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Visa.searchVisa">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="76dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
            android:weightSum="3"
            app:layout_constraintHorizontal_bias="1.0">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="79dp"
                android:layout_height="38dp" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:layout_marginTop="6dp"
                        android:layout_width="43dp"
                        android:layout_height="26dp" app:srcCompat="@drawable/left_arrow23"
                        android:id="@+id/jjjjj" android:background="#6F499C"
                        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                        android:scaleType="fitCenter" android:layout_gravity="right" android:onClick="backDVisa"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="114dp" android:weightSum="2">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Applay for Visa"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:paddingRight="60dp"
                        android:textColor="#fff"

                        android:id="@+id/textView14" android:fontFamily="sans-serif" android:paddingTop="30dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout2" android:layout_marginBottom="2dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:background="#fff">
        <Button
                android:text="Select your country"
                android:layout_gravity="center"
                android:layout_width="289dp"
                android:onClick="showDilog"
                android:layout_height="wrap_content" android:id="@+id/showN"
                android:textColor="#fff" android:textSize="18sp"
                android:layout_marginTop="10dp" android:paddingLeft="5dp" android:paddingTop="5dp"
                android:background="@drawable/btnb" android:layout_marginBottom="5dp"/>
        <TextView android:id="@+id/available"
                  android:layout_width="match_parent" android:layout_height="38dp"
                  android:textAlignment="center"
                  android:text="" android:gravity="center" android:textSize="17sp"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="0dp" android:layout_marginTop="10dp"
                android:background="#fff" android:splitMotionEvents="false">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Visa_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:scrollbars="vertical"
            />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>