<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Visa.searchVisa">
<androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Visa.searchVisa">
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view3"
            android:layout_width="173dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/animation2"
            app:lottie_loop="true"
            android:visibility="invisible"

            app:lottie_autoPlay="true" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:foregroundGravity="center" android:translationZ="1dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.396"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="76dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
            android:weightSum="3"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginRight="8dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:weightSum="2">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Applay for Visa"
                        android:gravity="center"
                        android:textSize="20dp"

                        android:textColor="#fff"

                        android:id="@+id/textView14" android:fontFamily="sans-serif" android:paddingTop="30dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout2" android:layout_marginBottom="2dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:background="#fff">

        <Button
                android:id="@+id/showN"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btnb"
                android:paddingLeft="5dp"
                android:text="Select your country"
                android:textColor="#fff"
                android:textSize="18sp" />
<!--        <TextView android:id="@+id/available"-->
<!--                  android:layout_width="match_parent" android:layout_height="38dp"-->
<!--                  android:textAlignment="center"-->
<!--                  android:text="" android:gravity="center" android:textSize="17sp"/>-->
<!--   -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Visa_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:scrollbars="vertical"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>