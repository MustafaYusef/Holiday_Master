<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp" android:background="@drawable/cardback"
              android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp"
              android:layout_marginBottom="10dp"
              android:elevation="15dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="334dp"
            android:layout_height="159dp" android:layout_margin="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:weightSum="4" android:background="@drawable/btnb" android:gravity="center"
                android:padding="5dp">
            <ImageView
                    android:layout_weight="1"
                    android:layout_width="29dp"
                    android:layout_height="match_parent" android:id="@+id/image1View6" android:src="@drawable/name"
                    android:layout_marginBottom="3dp"/>
            <ImageView
                    android:layout_weight="1"

                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView7" android:src="@drawable/flag" android:layout_marginBottom="3dp"/>
            <ImageView
                    android:layout_weight="1"

                    android:layout_width="26dp"
                    android:layout_height="match_parent" android:id="@+id/imageVie1w8" android:src="@drawable/checked"
                    android:layout_marginBottom="3dp"/>
            <ImageView
                    android:layout_weight="1"

                    android:layout_width="28dp"
                    android:layout_height="match_parent" android:id="@+id/imag2eVie1w8"
                    android:src="@drawable/description"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginLeft="10dp" android:weightSum="4">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/nameCountry" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="16sp" android:textColor="#000"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Country" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="16sp" android:textColor="#000"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Approv" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="16sp" android:textColor="#000"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Description" android:layout_weight="1"
                    android:gravity="center_vertical" android:textSize="16sp" android:textColor="#000"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="2dp"
                  android:background="#94000000"
    android:layout_margin="7dp"></LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp" android:gravity="right">
        <TextView
                android:text="TextView"
                android:layout_width="183dp"
                android:layout_height="wrap_content" android:id="@+id/PriceVisa" android:layout_weight="1"
                android:textColor="#6F499C" android:textSize="18sp" android:paddingLeft="10dp"/>
        <Button
                android:text="Select"
                android:layout_width="120dp"
                android:layout_height="match_parent" android:id="@+id/SelectVisa" android:background="@drawable/btnun"
                android:layout_marginBottom="5dp" android:textColor="#fff"
                android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>