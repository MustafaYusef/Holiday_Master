<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginMember" android:background="@color/cardview_light_background">

    <EditText
            android:layout_width="305dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/textuser"
            android:id="@+id/UserName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/username" android:textAlignment="viewStart"
            android:autofillHints="" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.533"/>
    <ImageView
            android:layout_width="293dp"
            android:layout_height="227dp" app:srcCompat="@drawable/logoair2x"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="68dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.436"
    />
    <EditText

            android:layout_width="307dp"
            android:layout_height="55dp"
            android:inputType="textWebPassword"
            android:ems="10"
            android:background="@drawable/textuser"
            android:id="@+id/Password" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Password" android:textAlignment="viewStart"
            android:layout_marginBottom="140dp" app:layout_constraintBottom_toBottomOf="@+id/button2"
    />
    <Button
            android:text="Login"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:background="@drawable/btnun" android:textSize="24sp" android:onClick="Login"/>
</androidx.constraintlayout.widget.ConstraintLayout>