<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".LoginMember" android:background="@color/cardview_light_background"
        android:orientation="vertical" android:gravity="center">
    <LinearLayout android:layout_width="match_parent" android:layout_height="278dp" android:layout_gravity="top"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/logoplain"
                android:id="@+id/imageView2"

                app:layout_constraintBottom_toTopOf="@+id/UserName" android:layout_gravity="top"
                android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="246dp"
                  android:layout_marginTop="10dp"
                  android:orientation="vertical"
                  android:layout_gravity="center">
        <EditText
                android:layout_width="305dp"
                android:layout_height="55dp"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:background="@drawable/textuser"
                android:id="@+id/UserName" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"
                android:hint="@string/username"
                android:autofillHints=""
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
        />

        <EditText

                android:layout_width="305dp"
                android:layout_height="55dp"
                android:inputType="textWebPassword"
                android:ems="10"
                android:background="@drawable/textuser"
                android:id="@+id/Password"
                android:paddingLeft="5dp"
                android:layout_marginTop="40dp"
                android:hint="Password"
                android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="bottom" android:gravity="center">

        <Button
                android:text="Login"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/button2" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btnun" android:textSize="24sp" android:onClick="Login"
                android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>