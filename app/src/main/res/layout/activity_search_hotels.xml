<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Hotels.SearchHotels">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:layout_marginTop="0dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="0dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="0dp" android:layout_marginBottom="0dp"
                  app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="92dp"
                      android:layout_gravity="center" android:orientation="horizontal"
                      android:background="@drawable/backsearch">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_gravity="center" android:textColor="#fff" android:textSize="26dp"
                      android:text="Book your Hotel" android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="68dp" android:orientation="vertical">
            <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:id="@+id/CityHotel"
                    android:layout_weight="2"
                     android:overScrollMode="ifContentScrolls"
                   android:justificationMode="inter_word"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textColorHint="@color/cardview_dark_background"
                    android:completionThreshold="2"
                    android:popupBackground="#6F499C"
                    android:dropDownHeight="wrap_content" android:dropDownWidth="wrap_content"
                    android:textColorLink="#000"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp" android:weightSum="2" android:paddingLeft="3dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="46dp"
                          android:layout_weight="1" android:layout_marginRight="10dp"
                          android:background="@drawable/btnb" android:padding="4dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:src="@drawable/ic_calendar" android:layout_marginLeft="5dp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkin"
                        android:layout_weight="1"

                        android:onClick="chIn"
                        android:textColor="#fff"
                        android:textAlignment="center" android:selectAllOnFocus="false"
                        android:text="Checkin" android:textStyle="normal"
                        android:textColorLink="#6F499C" android:background="@drawable/btnb" android:textSize="12sp"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_weight="1" android:layout_marginRight="5dp"
                          android:background="@drawable/btnb" android:padding="4dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:src="@drawable/ic_calendar" android:layout_marginLeft="5dp"/>
                <Button
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkout"
                        android:layout_weight="1"

                        android:onClick="chout"
                        android:textColor="#fff"
                        android:textAlignment="center" android:selectAllOnFocus="false"
                        android:text="Checkout" android:textStyle="normal"
                        android:textColorLink="#6F499C" android:background="@drawable/btnb" android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
        android:weightSum="3">
            <TextView android:layout_width="101dp" android:layout_height="wrap_content"
                      android:text="Adult" android:textSize="18sp" android:padding="5dp"
                      android:textColor="#494242"
                      android:paddingLeft="10dp"
                      android:id="@+id/textView13" android:layout_weight="0.7"/>
            <TextView android:layout_width="119dp" android:layout_height="wrap_content"
                      android:text="Children" android:textSize="18sp" android:padding="5dp" android:textColor="#494242"
                      android:id="@+id/textView4"
                      android:layout_marginLeft="0dp"
                      android:paddingLeft="10dp"
                      android:layout_weight="0.7"/>
            <TextView android:layout_width="124dp" android:layout_height="wrap_content"
                      android:text="Infant" android:textSize="18sp" android:padding="5dp" android:textColor="#494242"
                      android:layout_weight="0.7"
                      android:paddingLeft="10dp"
                      android:layout_marginLeft="0dp"/>
        </LinearLayout>
        <LinearLayout android:layout_marginLeft="0dp"
                      android:layout_width="match_parent" android:layout_height="34dp"
                      android:orientation="horizontal" android:weightSum="3" >
            <Spinner android:layout_width="353dp" android:layout_height="match_parent" android:id="@+id/AdultHot"
                     android:background="@drawable/spinner"
                     android:textDirection="anyRtl" android:textAlignment="center" android:layout_weight="1">

            </Spinner>
            <Spinner android:layout_width="371dp" android:layout_height="match_parent" android:id="@+id/ChildHot"
                     android:background="@drawable/spinner"
                     android:textDirection="anyRtl" android:textAlignment="center" android:layout_weight="1">

            </Spinner>
            <Spinner android:layout_width="375dp" android:layout_height="match_parent" android:id="@+id/InfantHot"
                     android:textDirection="anyRtl" android:textAlignment="center" android:layout_weight="1"
                     android:layout_marginRight="20dp"

                     android:background="@drawable/spinner">

            </Spinner>
        </LinearLayout>

        <LinearLayout android:layout_width="312dp" android:layout_height="316dp"
                      android:gravity="" android:orientation="horizontal"
                      android:layout_gravity="right">

            <Button android:layout_width="326dp"
                    android:layout_height="62dp"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:background="@drawable/btn"
                    android:text="Search Hotels"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold" android:onClick="goToHotels"/>
        </LinearLayout>
    </LinearLayout>
