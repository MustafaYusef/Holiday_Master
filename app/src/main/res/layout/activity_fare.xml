<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".tickets.FareRules.Fare">
    <com.airbnb.lottie.LottieAnimationView
            android:inputType="textEmailAddress|textNoSuggestions"
            android:visibility="invisible"
            android:id="@+id/animation_viewFare"
            android:layout_width="173dp"
            android:layout_height="52dp"

            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/animation2"
            app:lottie_loop="true"
            app:lottie_autoPlay="false" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintVertical_bias="0.432" android:foregroundGravity="center" android:translationZ="1dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/linearLayout3"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#F3F0F0"
                  android:orientation="vertical" android:id="@+id/linearLayout3">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
                android:weightSum="3"
                android:gravity="center"
                android:layout_marginTop="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
            <!--<ImageButton-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="39dp" app:srcCompat="@drawable/left_arrow23"-->
            <!--android:id="@+id/imageButton3" android:layout_weight="1" android:background="@drawable/backsearch"-->
            <!--android:onClick="backToOne" android:scaleType="fitCenter" android:layout_gravity="center"/>-->
            <TextView
                    android:text="Fare Rules"
                    android:layout_width="221dp"
                    android:layout_height="52dp"
                    android:layout_gravity="top" android:textSize="24sp" android:textStyle="bold"
                    android:paddingTop="10dp" android:textColor="#fff" android:layout_weight="1"
                    android:gravity="center"/>
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/fareCont"
                      android:padding="10dp"
        android:visibility="invisible">
            <Button
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:background="@drawable/btnb"
                    android:textColor="#ffffff"
                    android:text="More info"
                    android:layout_weight="1"


                    android:textAlignment="center" android:layout_marginLeft="5dp" android:textSize="14sp"
                    android:paddingLeft="2dp" android:paddingRight="2dp" android:id="@+id/FareInfo"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_marginTop="15dp"
                          android:orientation="horizontal" android:weightSum="4" android:elevation="5dp"
                          android:id="@+id/AirLinBtn">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center" android:textColor="#fff"
                          android:background="@drawable/fare_back1"
                          android:layout_weight="3" android:text="Airline" android:textSize="16sp"
                          android:paddingBottom="15dp" android:paddingTop="15dp"/>
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center|left"
                          android:text="Airline"
                          android:textSize="18sp" android:padding="15dp"
                          android:background="@drawable/fare_back2"
                          android:layout_weight="1" android:id="@+id/AirFare"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="15dp"
                          android:weightSum="4" android:elevation="5dp" android:id="@+id/FareBaseBtn">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center" android:textColor="#fff"
                          android:background="@drawable/fare_back1"
                          android:layout_weight="3" android:text="Fare Basis" android:textSize="16sp"
                          android:paddingTop="15dp" android:paddingBottom="15dp"/>
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center|left"
                          android:text="Airline"
                          android:textSize="18sp" android:padding="15dp"
                          android:background="@drawable/fare_back2"
                          android:layout_weight="1" android:id="@+id/FareBase"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="15dp"
                          android:weightSum="4" android:elevation="5dp" android:id="@+id/FareTypeBtn">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center" android:textColor="#fff"
                          android:background="@drawable/fare_back1"
                          android:layout_weight="3" android:text="Fare Type" android:textSize="16sp"
                          android:paddingTop="15dp" android:paddingBottom="15dp"/>
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center|left"
                          android:text="Airline"
                          android:textSize="18sp" android:padding="15dp"
                          android:background="@drawable/fare_back2"
                          android:layout_weight="1" android:id="@+id/FareType"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="15dp"
                          android:weightSum="4" android:elevation="5dp" android:id="@+id/FareClassBtn">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center" android:textColor="#fff"
                          android:background="@drawable/fare_back1"
                          android:layout_weight="3" android:text="Fare Class" android:textSize="16sp"
                          android:paddingBottom="15dp" android:paddingTop="15dp"/>
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center|left"
                          android:text="Airline"
                          android:textSize="18sp" android:padding="15dp"
                          android:background="@drawable/fare_back2"
                          android:layout_weight="1" android:id="@+id/FareClass"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="15dp"
                          android:weightSum="4" android:elevation="5dp" android:id="@+id/RefundBtn">
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center" android:textColor="#fff"
                          android:background="@drawable/fare_back1"
                          android:layout_weight="3" android:text="Refund Type" android:textSize="16sp"
                          android:paddingTop="15dp" android:paddingBottom="15dp"/>
                <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                          android:gravity="center|left"
                          android:text="Airline"
                          android:textSize="18sp" android:padding="15dp"
                          android:background="@drawable/fare_back2"
                          android:layout_weight="1" android:id="@+id/RefundFare"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
