<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".showHoliday" android:background="@color/cardview_light_background">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="141dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
            android:weightSum="3"
            app:layout_constraintHorizontal_bias="1.0">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="152dp" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="161dp">
                <ImageButton
                        android:layout_width="59dp"
                        android:layout_height="38dp" app:srcCompat="?attr/actionModeCloseDrawable"
                        android:id="@+id/imageButton2" android:background="#6F499C"
                        style="@android:style/Widget.DeviceDefault.Light.ImageButton" android:onClick="backSearch"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content" android:id="@+id/fromcity" android:textAlignment="center"
                        android:textSize="24sp" android:textStyle="bold" android:textColor="#fff"
                        android:gravity="bottom"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="32dp" android:id="@+id/AdultShow" android:textAlignment="textEnd"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="29dp" android:id="@+id/childShow"
                        android:textAlignment="textEnd"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="135dp" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="136dp" android:gravity="bottom" android:weightSum="2">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3dp" android:id="@+id/textView24" android:layout_weight="1"/>
                <ImageView
                        android:layout_width="128dp"
                        android:layout_height="60dp" app:srcCompat="@drawable/planwhite"
                        android:id="@+id/imageView4" android:layout_weight="0.5" android:textAlignment="textEnd"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" android:id="@+id/classShow"
                        android:layout_gravity="bottom" android:gravity="center" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="133dp" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="131dp" android:gravity="bottom">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="52dp" android:id="@+id/toShow" android:gravity="top"
                        android:layout_gravity="top" android:textSize="24sp" android:textStyle="bold"
                        android:paddingTop="10dp" android:textColor="#fff"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="123dp"
                        android:layout_height="50dp" android:id="@+id/dateShow"
                        android:layout_gravity="bottom" android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout2" android:layout_marginBottom="2dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:background="#fff">
        <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content" android:id="@+id/noResult"
                android:textColor="@color/browser_actions_text_color" android:textSize="18sp"
                android:layout_marginTop="10dp" android:paddingLeft="5dp" android:paddingTop="5dp"
                android:background="#fff"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                 android:paddingBottom="0dp" android:layout_marginTop="10dp"
                 android:background="#d9d9d9">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Holiday_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#d9d9d9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:scrollbars="vertical"
            />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>