<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".showHoliday" android:background="@color/cardview_light_background">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="113dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/backsearch" android:id="@+id/linearLayout"
            android:weightSum="3"
            app:layout_constraintHorizontal_bias="1.0"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="35dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="22dp" app:srcCompat="@drawable/left_arrow23"
                        android:id="@+id/imageButton2" android:background="#6F499C"
                        style="@android:style/Widget.DeviceDefault.Light.ImageButton" android:onClick="backSearch"
                        android:scaleType="centerInside" android:layout_marginTop="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="361dp"
                android:layout_height="103dp" android:gravity="bottom" android:weightSum="2"
                android:layout_marginBottom="10dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="34dp" android:layout_weight="0.5" android:gravity="center">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/fromcity" android:layout_weight="1"
                        android:gravity="center" android:textColor="#fff" android:textSize="18sp"/>
                <ImageView
                        android:layout_width="101dp"
                        android:layout_height="40dp" app:srcCompat="@drawable/planwhite"
                        android:id="@+id/imageView4" android:textAlignment="textEnd"
                />
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/toShow" android:layout_weight="1"
                        android:textColor="#fff" android:textSize="18sp" android:gravity="left"/>
            </LinearLayout>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/classShow"
                    android:layout_gravity="bottom" android:layout_weight="1"
                    android:textAlignment="center" android:gravity="bottom" android:paddingBottom="5dp"
                    android:textColor="#fff" android:textSize="13dp" android:paddingRight="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/Lod"
            android:layout_width="295dp"
            android:layout_height="255dp"
            android:scaleType="centerInside"
            app:lottie_rawRes="@raw/animation2"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"

            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.381"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout2" android:layout_marginBottom="2dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="#fff" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
                android:layout_width="112dp"
                android:layout_height="wrap_content" android:id="@+id/noResult"
                android:textColor="@color/browser_actions_text_color" android:textSize="18sp"
                android:layout_marginTop="5dp" android:paddingLeft="5dp" android:paddingTop="5dp"
                android:background="#fff"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#d9d9d9" android:splitMotionEvents="false" android:layout_marginTop="10dp">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Holiday_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:scrollbars="vertical"
                    android:layout_marginTop="10dp"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>