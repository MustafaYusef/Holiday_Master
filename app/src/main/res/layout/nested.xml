<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tickets.DetailsTow">
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:orientation="vertical" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp">
            <TextView
                    android:text="Ticket info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/toShow2"
                    android:layout_gravity="top" android:textSize="24sp" android:textStyle="bold"
                    android:paddingTop="10dp" android:textColor="#fff" android:layout_weight="1"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="10dp"
                      android:orientation="vertical" android:layout_height="match_parent" android:layout_weight="6">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/locationDatesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp" android:layout_weight="5">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout android:gravity="center" android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1">
                <Button
                        android:text="Purchase"
                        android:layout_width="261dp"
                        android:layout_height="49dp" android:id="@+id/purTow" android:textSize="16sp"
                        android:background="@drawable/btnun" android:textColor="#fff"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_gravity="center"
                        android:layout_marginTop="15dp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>