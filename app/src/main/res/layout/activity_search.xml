                        android:background="#6F499C"></NumberPicker>

                <NumberPicker android:layout_weight="1"
                              android:layout_width="match_parent"
                              android:id="@+id/childPicker"
                              android:layout_height="match_parent"
                              android:scrollbarStyle="outsideOverlay"
                              android:focusable="auto"
                              android:filterTouchesWhenObscured="true"
                              android:solidColor="@color/cardview_light_background"
                              android:textDirection="firstStrong"
                              android:background="#6F499C"
                ></NumberPicker>

                <NumberPicker android:layout_weight="1"
                              android:layout_width="match_parent"
                              android:id="@+id/InfantPicker"
                              android:layout_height="match_parent"
                              android:scrollbarStyle="outsideOverlay"
                              android:focusable="auto"
                              android:filterTouchesWhenObscured="true"
                              android:solidColor="@color/cardview_light_background"
                              android:textDirection="firstStrong"
                              android:background="#6F499C"></NumberPicker>


