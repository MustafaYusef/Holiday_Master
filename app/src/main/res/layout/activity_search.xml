<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".searchActivity"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/root1_layout"
            android:orientation="vertical" android:background="@color/cardview_light_background">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/backsearch"

                android:padding="10dp"
                android:paddingRight="0dp" android:paddingLeft="10dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" android:layout_gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="194dp"
                        android:layout_height="match_parent">
                    <ImageButton
                            android:layout_width="66dp"
                            android:layout_height="22dp" app:srcCompat="@drawable/left_arrow"
                            android:id="@+id/btnBack" android:background="#6F499C"
                            style="@android:style/Widget.DeviceDefault.Light.ImageButton" android:onClick="backSearch"
                            android:layout_weight="1" android:layout_gravity="left" android:scaleType="fitCenter"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="171dp"
                            android:layout_height="match_parent" android:layout_weight="2">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="right">
                    <ImageButton
                            android:layout_width="68dp"
                            android:layout_height="29dp" app:srcCompat="@drawable/user_profile"
                            android:id="@+id/imageButton10" android:background="#6F499C"
                            style="@android:style/Widget.DeviceDefault.Light.ImageButton" android:onClick="profile"
                            android:scaleType="centerInside" android:layout_gravity="top"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"
                    android:text="@string/book_your_light"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_plane"
                />
                <TextView
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:text="@string/flight"
                        android:textSize="13sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#ffffff"
                        android:layout_marginStart="15dp" android:layout_marginRight="5dp"/>


                <ImageView
                        android:layout_width="34dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_home"
                        android:layout_marginLeft="30dp"

                        android:layout_marginStart="0dp"/>
                <TextView
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:text="@string/hotel"
                        android:textSize="13sp"
                        android:layout_marginLeft="0dp"
                        android:textColor="#ffffff"
                        android:layout_marginStart="2dp" android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="20dp" android:paddingBottom="20dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="396dp"
                        android:layout_height="match_parent" android:weightSum="3">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="129dp"
                            android:layout_height="match_parent" android:gravity="center|top"
                            android:layout_weight="0.5">
                        <Button
                                android:text="RoundTrip"
                                android:layout_width="148dp"
                                android:layout_height="61dp" android:id="@+id/button10"
                                android:layout_weight="0.5" android:background="@drawable/roundone"
                                android:onClick="TowWay"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="120dp"
                            android:layout_height="match_parent" android:gravity="top" android:layout_weight="1">
                        <Button
                                android:text="OneWay"
                                android:layout_width="150dp"
                                android:layout_height="60dp" android:id="@+id/button17"
                                android:layout_weight="0.5" android:background="@drawable/roundone"
                                android:onClick="Oneway"
                                android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp" android:background="@color/cardview_light_background">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:gravity="center">

                <AutoCompleteTextView
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:hint="from"
                        android:id="@+id/fromCity"
                        android:layout_weight="2"

                        android:textColor="#000"

                        android:textColorHint="@color/cardview_dark_background"
                        android:completionThreshold="2"
                        android:popupBackground="#6F499C"
                        android:dropDownHeight="wrap_content" android:dropDownWidth="wrap_content"
                        android:textColorLink="#000"/>

                <AutoCompleteTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000"


                        android:completionThreshold="2"
                        android:popupBackground="#6F499C"
                        android:dropDownHeight="wrap_content" android:dropDownWidth="wrap_content"
                        android:layout_weight="2"
                        android:hint="@string/to"
                        android:id="@+id/to"
                        android:textColorHint="@color/cardview_dark_background"
                        android:layout_marginStart="0dp" android:textColorLink="#6F499C"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
            >

                <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:src="@drawable/ic_calendar"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="departure"
                        android:id="@+id/dep"
                        android:background="#fff"
                        android:layout_weight="1"

                        android:onClick="funDate"
                        android:textColor="#111"
                        android:textAlignment="textStart" android:selectAllOnFocus="false"
                        android:text="Departure" android:textStyle="normal"
                        android:textColorLink="#6F499C"/>

                <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:src="@drawable/ic_calendar" android:id="@+id/imageView3"/>
                <Button
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="return"
                        android:onClick="dateRet"
                        android:background="#fff"
                        android:textColor="#001"
                        android:id="@+id/retun"

                        android:text="Return" android:textStyle="normal" android:textAlignment="textStart"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="53dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="175dp"
                            android:layout_height="53dp" android:layout_weight="1">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="183dp"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="51dp">
                                    <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                        <LinearLayout
                                                android:orientation="horizontal"
                                                android:layout_width="62dp"
                                                android:layout_height="match_parent" android:gravity="center">
                                            <TextView
                                                    android:text="Adult"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="51dp" android:id="@+id/textView2"
                                                    android:layout_weight="1" android:textAlignment="center"
                                                    android:textColor="#000" android:gravity="center"
                                            />
                                        </LinearLayout>
                                        <LinearLayout
                                                android:orientation="horizontal"
                                                android:layout_width="63dp"
                                                android:layout_height="match_parent" android:gravity="center">
                                            <TextView
                                                    android:text="child"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="51dp" android:id="@+id/textView6"
                                                    android:layout_weight="1" android:textAlignment="center"
                                                    android:textColor="#000" android:gravity="center"/>
                                        </LinearLayout>
                                        <LinearLayout
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent" android:gravity="center">
                                            <TextView
                                                    android:text="infant"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="51dp" android:id="@+id/textView7"
                                                    android:layout_weight="1" android:textAlignment="center"
                                                    android:textColor="#000" android:gravity="center"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                        <LinearLayout
                                                android:orientation="horizontal"
                                                android:layout_width="63dp"
                                                android:layout_height="match_parent">

                                        </LinearLayout>
                                        <LinearLayout
                                                android:orientation="horizontal"
                                                android:layout_width="62dp"
                                                android:layout_height="match_parent">

                                        </LinearLayout>
                                        <LinearLayout
                                                android:orientation="horizontal"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                                android:text="Class"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/textView5"
                                android:layout_weight="1"
                                android:textSize="18sp" android:textColor="@color/cardview_dark_background"
                                android:textAlignment="center" android:paddingTop="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="91dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="81dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="178dp"
                            android:layout_height="match_parent">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="63dp"
                                    android:layout_height="match_parent">
                                <NumberPicker android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:scrollbarStyle="outsideOverlay"
                                              android:id="@+id/AdultPicker"
                                              android:solidColor="@color/cardview_light_background"
                                              android:isScrollContainer="false"
                                              android:background="#6F499C"></NumberPicker>
                            </LinearLayout>
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="62dp"
                                    android:layout_height="match_parent">
                                <NumberPicker android:layout_width="match_parent"
                                              android:id="@+id/childPicker"
                                              android:layout_height="match_parent"
                                              android:scrollbarStyle="outsideOverlay"
                                              android:focusable="auto"
                                              android:filterTouchesWhenObscured="true"
                                              android:solidColor="@color/cardview_light_background"
                                              android:textDirection="firstStrong"
                                              android:background="#6F499C"></NumberPicker>
                            </LinearLayout>
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <NumberPicker android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:scrollbarStyle="outsideOverlay"
                                              android:id="@+id/InfantPicker"
                                              android:solidColor="@color/cardview_light_background"
                                              android:scrollbarAlwaysDrawHorizontalTrack="false"
                                              android:background="#6F499C"></NumberPicker>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="69dp" android:id="@+id/spinner"
                                android:animateLayoutChanges="true"
                                android:background="@drawable/spinner"
                                android:popupBackground="@drawable/spinner" android:isScrollContainer="true"
                                android:layout_marginLeft="5dp" android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="93dp" android:gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="bottom|right">
                    <Button
                            android:text="Search Flights "
                            android:layout_width="370dp"
                            android:layout_height="69dp" android:id="@+id/button5" android:layout_weight="1"
                            android:textSize="20sp" android:textStyle="normal" android:background="@drawable/btnun"
                            android:onClick="showHolidys"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</ScrollView>
