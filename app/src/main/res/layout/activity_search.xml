                        android:layout_width="194dp"
                        android:layout_height="match_parent">
                    <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="25dp" app:srcCompat="@drawable/left_arrow23"
                            android:id="@+id/btnBack" android:background="#6F499C"
                            style="@android:style/Widget.DeviceDefault.Light.ImageButton" android:onClick="backSearch"
                            android:layout_weight="1" android:layout_gravity="left" android:scaleType="centerInside"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="171dp"
                            android:layout_height="match_parent" android:layout_weight="2">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="right">
                    <ImageButton
                            android:layout_width="57dp"
                            android:layout_height="29dp" app:srcCompat="@drawable/user2"
                            android:id="@+id/imageButton10" android:background="#6F499C"
                            style="@android:style/Widget.DeviceDefault.Light.ImageButton" android:onClick="profile"
                            android:scaleType="fitStart" android:layout_gravity="top"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:text="Book your Flight" android:gravity="center"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp" android:gravity="center">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                              android:layout_height="match_parent" android:layout_marginRight="20dp">
                    <ImageView
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_plane"
                    />
                    <TextView
                            android:layout_width="49dp"
                            android:layout_height="match_parent"
                            android:text="@string/flight"
                            android:textSize="16sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#ffffff"
                            android:layout_marginRight="5dp"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                              android:layout_height="match_parent" android:layout_marginRight="20dp">
                    <ImageView
                            android:layout_width="34dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_home"
                            android:layout_marginLeft="30dp"

                            android:layout_marginStart="0dp"/>
                    <TextView
                            android:layout_width="51dp"
                            android:layout_height="match_parent"
                            android:text="@string/hotel"
                            android:textSize="16sp"
                            android:layout_marginLeft="0dp"
                            android:textColor="#ffffff"
                            android:layout_marginStart="2dp" android:textAlignment="center"
                            android:onClick="goToHotel"/>
                </LinearLayout>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                              android:orientation="horizontal">
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/visa1"
                            android:layout_marginLeft="30dp"

                            android:layout_marginStart="0dp" android:layout_marginBottom="4dp"/>
                    <TextView
                            android:layout_width="47dp"
                            android:layout_height="match_parent"
                            android:text="Visa"
                            android:textSize="16sp"
                            android:layout_marginLeft="0dp"
                            android:textColor="#ffffff"
                            android:layout_marginStart="2dp" android:textAlignment="center"
                            android:onClick="goToHotel"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="396dp"
                    android:layout_height="wrap_content" android:layout_marginTop="20dp" android:paddingBottom="20dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:weightSum="3" android:gravity="center">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="129dp"
                            android:layout_height="match_parent" android:gravity="center|top"
                            android:layout_weight="0.5">
                        <Button
                                android:text="RoundTrip"
                                android:layout_width="148dp"
                                android:layout_height="wrap_content" android:id="@+id/button10"
                                android:layout_weight="0.5" android:background="@drawable/roundone"
                                android:onClick="TowWay" android:textColor="#fff"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="120dp"
                            android:layout_height="match_parent" android:gravity="top" android:layout_weight="1">
                        <Button
                                android:text="OneWay"
                                android:layout_width="150dp"
                                android:layout_height="match_parent" android:id="@+id/button17"
                                android:layout_weight="0.5" android:background="@drawable/roundone"
                                android:onClick="Oneway"
                                android:layout_marginLeft="5dp" android:textColor="#fff"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
