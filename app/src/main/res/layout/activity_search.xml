            </LinearLayout>
        </LinearLayout>






            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="93dp" android:gravity="right">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:gravity="bottom|right">
                    <Button
                            android:text="Search Flights "
                            android:layout_width="351dp"
                            android:layout_height="69dp" android:id="@+id/button5" android:layout_weight="1"
                            android:textSize="20sp" android:textStyle="normal" android:background="@drawable/btn"
