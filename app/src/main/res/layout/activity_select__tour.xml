<?xml version="1.0" encoding="utf-8"?>
<FrameLayout   xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:tools="http://schemas.android.com/tools"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               tools:context=".Tours.bookTours.Select_Tour">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:orientation="vertical" app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="0dp" android:background="@drawable/backsearch" android:id="@+id/linearLayout"
                    android:weightSum="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="5dp">
                <TextView
                        android:text="Ticket info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/toShow2"
                        android:layout_gravity="top" android:textSize="24sp" android:textStyle="bold"
                        android:paddingTop="10dp" android:textColor="#fff" android:layout_weight="1"
                        android:gravity="center"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                          android:layout_width="244dp"
                          android:layout_height="42dp" android:id="@+id/DatesTours"

                          android:layout_marginTop="10dp" android:paddingLeft="5dp" android:paddingTop="2dp"
                          android:background="@drawable/btnb" android:layout_marginLeft="10dp" android:gravity="center"
                            >
                <ImageView
                        android:layout_width="39dp"
                        android:layout_height="24dp" android:id="@+id/imageView5"
                        android:src="@drawable/ic_calendar"/>
                <TextView
                        android:text="Select a date"
                        android:layout_width="231dp"
                        android:layout_height="match_parent" android:id="@+id/dateTour" android:layout_weight="1"
                        android:textColor="#fff" android:textSize="18sp" android:gravity="center_vertical"
                        android:paddingLeft="5dp" android:paddingBottom="3dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="10dp"
                          android:orientation="vertical" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
                              android:weightSum="4" android:background="@drawable/back_tour" android:elevation="10dp"
                              android:layout_marginBottom="5dp" android:layout_marginLeft="10dp"
                              android:layout_marginRight="10dp">
                    <LinearLayout android:layout_width="164dp" android:layout_height="match_parent"
                                  android:layout_weight="1" android:gravity="center">
                        <ImageView android:layout_width="45dp" android:layout_height="43dp"
                                   android:src="@drawable/adult_avatar" android:scaleType="centerInside"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="1dp"
                                  android:layout_height="match_parent"
                                  android:background="@color/browser_actions_text_color"
                    ></LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="396dp"
                                  android:layout_height="match_parent" android:layout_weight="2" android:weightSum="2">

                        <TextView
                                android:paddingLeft="5dp"
                                android:text="Adults"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/textV1iew23"
                                android:layout_weight="1" android:gravity="center_vertical"
                                android:textColor="@color/browser_actions_text_color" android:textSize="18sp"/>
                        <TextView
                                android:paddingLeft="5dp"
                                android:text="10 years old and above"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/text2View24"
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="204dp"
                                  android:layout_height="match_parent" android:layout_weight="1">

                        <TextView
                                android:text="TextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/priceAdult"
                                android:textColor="@color/colorPrimary" android:gravity="center"
                                android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
                              android:weightSum="4" android:background="@drawable/back_tour" android:elevation="10dp"
                              android:layout_marginBottom="5dp" android:layout_marginLeft="10dp"
                              android:layout_marginRight="10dp">
                    <LinearLayout android:layout_width="164dp" android:layout_height="match_parent"
                                  android:layout_weight="1" android:gravity="center">
                        <ImageView android:layout_width="52dp" android:layout_height="45dp"
                                   android:src="@drawable/happy_children" android:scaleType="centerInside"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="1dp"
                                  android:layout_height="match_parent"
                                  android:background="@color/browser_actions_text_color"
                    ></LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="396dp"
                                  android:layout_height="match_parent" android:layout_weight="2" android:weightSum="2">

                        <TextView
                                android:paddingLeft="5dp"
                                android:text="Children"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/t1extView23"
                                android:layout_weight="1" android:gravity="center_vertical"
                                android:textColor="@color/browser_actions_text_color" android:textSize="18sp"/>
                        <TextView
                                android:paddingLeft="5dp"
                                android:text="10 years old and above"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/te3xtView24"
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="204dp"
                                  android:layout_height="match_parent" android:layout_weight="1">

                        <TextView
                                android:text="TextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/priceChild"
                                android:textColor="@color/colorPrimary" android:gravity="center"
                                android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
                              android:weightSum="4" android:background="@drawable/back_tour" android:elevation="10dp"
                              android:layout_marginBottom="10dp" android:layout_marginLeft="10dp"
                              android:layout_marginRight="10dp">
                    <LinearLayout android:layout_width="164dp" android:layout_height="match_parent"
                                  android:layout_weight="1" android:gravity="center">
                        <ImageView android:layout_width="52dp" android:layout_height="48dp"
                                   android:src="@drawable/baby_with_diaper" android:scaleType="centerInside"
                        />
                    </LinearLayout>
                    <LinearLayout android:layout_width="1dp"
                                  android:layout_height="match_parent"
                                  android:background="@color/browser_actions_text_color"
                    ></LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="396dp"
                                  android:layout_height="match_parent" android:layout_weight="2" android:weightSum="2">

                        <TextView
                                android:paddingLeft="5dp"
                                android:text="Infantes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/textView23"
                                android:layout_weight="1" android:gravity="center_vertical"
                                android:textColor="@color/browser_actions_text_color" android:textSize="18sp"/>
                        <TextView
                                android:paddingLeft="5dp"
                                android:text="10 years old and above"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/textView24"
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="204dp"
                                  android:layout_height="match_parent" android:layout_weight="1">

                        <TextView
                                android:text="Free"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:id="@+id/textView22"
                                android:textColor="@color/colorPrimary" android:gravity="center"
                                android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                      android:layout_width="240dp" android:layout_height="wrap_content">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:text="Available seats " android:textColor="#fff"
                              android:textSize="16dp" android:background="@drawable/btnleft"
                              android:id="@+id/seatsNo" android:paddingBottom="7dp" android:paddingLeft="15dp"
                              android:paddingStart="7dp" android:paddingTop="7dp"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/wrap" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="208dp"
                                  android:id="@+id/container">
                        <LinearLayout  android:weightSum="2"
                                       android:layout_width="345dp" android:layout_height="wrap_content"
                                       android:orientation="horizontal" android:gravity="center"
                                       android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                                       android:layout_marginLeft="10dp">


                            <TextView android:layout_weight="1" android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:textSize="16dp" android:text="Adults" android:textColor="#000"
                                      android:padding="5dp" android:gravity="center"/>
                            <TextView android:layout_weight="1" android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:textSize="16dp" android:text="Children" android:textColor="#000"
                                      android:padding="5dp" android:gravity="center"/>

                        </LinearLayout>
                        <LinearLayout android:layout_width="345dp" android:layout_height="wrap_content"
                                      android:orientation="horizontal" android:gravity="center"
                                      android:layout_marginBottom="10dp" android:weightSum="2"
                                      android:layout_marginLeft="10dp">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="103dp"
                                    android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center">
                                <Button
                                        android:text="-"
                                        android:textColor="#fff"
                                        android:textSize="24sp"
                                        android:background="@drawable/check"
                                        android:layout_width="35dp"


                                        android:layout_height="35dp" android:id="@+id/subAd"
                                        android:elevation="5dp"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:textSize="18sp" android:text="0" android:textColor="#000"
                                          android:padding="5dp" android:layout_marginLeft="10dp"
                                          android:layout_marginRight="10dp" android:id="@+id/adNo"/>
                                <Button
                                        android:text="+"
                                        android:textColor="#fff"
                                        android:textSize="24sp"
                                        android:background="@drawable/check"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:id="@+id/plusAd"
                                        android:elevation="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="103dp"
                                    android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center">
                                <Button
                                        android:text="-"
                                        android:textColor="#fff"
                                        android:textSize="24sp"
                                        android:background="@drawable/check"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp" android:id="@+id/subch"
                                        android:elevation="5dp"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:textSize="18sp" android:text="0" android:textColor="#000"
                                          android:padding="5dp" android:layout_marginLeft="10dp"
                                          android:layout_marginRight="10dp" android:id="@+id/chNo"/>
                                <Button
                                        android:text="+"
                                        android:textColor="#fff"
                                        android:textSize="24sp"
                                        android:background="@drawable/check"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:id="@+id/plusCh"
                                        android:elevation="5dp"/>
                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"></LinearLayout>

                    </LinearLayout>


                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="bottom|center" android:orientation="vertical"
                                  android:layout_gravity="bottom">
                        <Button
                                android:text="Purchase"
                                android:layout_width="261dp"
                                android:layout_height="49dp" android:id="@+id/priceButton" android:textSize="16sp"
                                android:background="@drawable/check" android:textColor="#fff"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginTop="15dp" android:layout_marginBottom="20dp"/>
                    </LinearLayout>
                </LinearLayout>






            </LinearLayout>


        </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/progress"/>
</FrameLayout>